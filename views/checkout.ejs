<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') %>

    <body>

        <%- include('partials/navbar') %>

            <div class="container">
                <h1 class="display-3">Checkout</h1>

                <p class="card-text">
                    Checking out
                    <strong>
                        <%= data.cartItems %>
                    </strong> items from your shopping cart
                </p>
            </div>




            <div class="container jumbotron transparent">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Title</th>
                            <th scope="col">Artist</th>
                            <th scope="col">Quantity</th>
                            <th class="text-right mr-2" scope="col">Price</th>
                            <th class="text-right mr-2" scope="col">Total</th>
                        </tr>
                    </thead>
                    <tbody>

                        <% for (i of data.cart.items) { %>
                            <tr>
                                <th>
                                    <%= i.itemId %>
                                </th>
                                <td>
                                    <%= i.info.title %>
                                </td>
                                <td>
                                    <%= i.info.artist %>
                                </td>
                                <td class="text-center">
                                    <%= i.quantity %>
                                </td>
                                <td class="text-right mr-2">
                                    <%= i.price %>
                                </td>
                                <td class="text-right mr-2">&euro;
                                    <%= (i.price * i.quantity).toFixed(2) %>
                                </td>
                            </tr>
                            <% } %>

                                <tr>
                                    <th scope="col">TOTAL</th>
                                    <td></td>
                                    <td></td>
                                    <td class="text-center">
                                        <%= data.cart.cartItems %>
                                    </td>
                                    <td></td>
                                    <td class="lead text-right mr-2">&euro;
                                        <%= data.cart.priceTotal.toFixed(2) %>
                                    </td>
                                </tr>

                    </tbody>
                </table>
                <br>
                <div class="container container-fluid alert alert-success alert-dismissible rounded" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <div class="container container-fluid alert  unselectable row" role="alert">
                        <div class="col text-center">
                            <p class="card-text lead">
                                Thanks for your order!
                            </p>
                            <a class="btn btn-outline-primary btn-lg" href="/shop">
                                <i class="fas fa-images fa-2x p-1 align-middle"></i> Go back to Shop</a>
                        </div>

                    </div>
                </div>
            </div>


            <%- include('partials/footer') %>


                <script src="/static/js/jquery.min.js"></script>
                <script src="/static/js/bootstrap.bundle.min.js"></script>
                <script src="/static/js/cart.js"></script>
    </body>

</html>